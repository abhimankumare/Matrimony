<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/hamburgerback"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin40">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin15"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="56dp"
                android:fontFamily="@font/robotoregular"
                android:hint="Min Age"
                android:layout_marginRight="@dimen/margin2"
                android:shadowColor="@color/color_gray">

                <!--this is the actual edit text which takes the input-->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_background"
                    android:fontFamily="@font/robotoregular"
                    android:shadowColor="@color/card_line" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text3"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="@dimen/margin2"
                android:layout_height="56dp"
                android:fontFamily="@font/robotoregular"
                android:hint="@string/max_age"
                android:shadowColor="@color/color_gray">

                <!--this is the actual edit text which takes the input-->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text4"
                    android:fontFamily="@font/robotoregular"
                    android:layout_width="match_parent"
                    android:background="@drawable/text_background"
                    android:shadowColor="@color/card_line"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text5"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="56dp"
                android:fontFamily="@font/robotoregular"
                android:hint="Min Income"
                android:layout_marginRight="@dimen/margin2"
                android:shadowColor="@color/color_gray">

                <!--this is the actual edit text which takes the input-->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_background"
                    android:fontFamily="@font/robotoregular"
                    android:shadowColor="@color/card_line" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text7"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:hint="Max Height"
                android:layout_marginLeft="@dimen/margin2"
                android:layout_height="56dp"
                android:fontFamily="@font/robotoregular"
                android:shadowColor="@color/color_gray">

                <!--this is the actual edit text which takes the input-->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text8"
                    android:fontFamily="@font/robotoregular"
                    android:layout_width="match_parent"
                    android:background="@drawable/text_background"
                    android:shadowColor="@color/card_line"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text9"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin56"
            android:layout_marginTop="10dp"
            android:hint="Cast">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/text10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_background"
                android:clickable="true"
                android:fontFamily="@font/robotoregular"
                android:shadowColor="@color/color_gray"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text11"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin56"
            android:layout_marginTop="10dp"
            android:hint="Community">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/text12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_background"
                android:clickable="true"
                android:fontFamily="@font/robotoregular"
                android:shadowColor="@color/color_gray"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text13"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin56"
            android:layout_marginTop="10dp"
            android:hint="Religion">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/text14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_background"
                android:clickable="true"
                android:fontFamily="@font/robotoregular"
                android:shadowColor="@color/color_gray"/>
        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text15"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="56dp"
                android:fontFamily="@font/robotoregular"
                android:hint="State"
                android:layout_marginRight="@dimen/margin2"
                android:shadowColor="@color/color_gray">

                <!--this is the actual edit text which takes the input-->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_background"
                    android:fontFamily="@font/robotoregular"
                    android:shadowColor="@color/card_line" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text17"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:hint="City"
                android:layout_marginLeft="@dimen/margin2"
                android:layout_height="56dp"
                android:fontFamily="@font/robotoregular"
                android:shadowColor="@color/color_gray">

                <!--this is the actual edit text which takes the input-->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text18"
                    android:fontFamily="@font/robotoregular"
                    android:layout_width="match_parent"
                    android:background="@drawable/text_background"
                    android:shadowColor="@color/card_line"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text19"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin56"
            android:layout_marginTop="10dp"
            android:hint="Education">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/text20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_background"
                android:clickable="true"
                android:fontFamily="@font/robotoregular"
                android:shadowColor="@color/color_gray"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text21"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin56"
            android:layout_marginTop="10dp"
            android:hint="Profession">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/text22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_background"
                android:clickable="true"
                android:fontFamily="@font/robotoregular"
                android:shadowColor="@color/color_gray"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text23"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="56dp"
                android:fontFamily="@font/robotoregular"
                android:hint="Min Income"
                android:layout_marginRight="@dimen/margin2"
                android:shadowColor="@color/color_gray">

                <!--this is the actual edit text which takes the input-->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_background"
                    android:fontFamily="@font/robotoregular"
                    android:shadowColor="@color/card_line" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text25"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:hint="Max Income"
                android:layout_marginLeft="@dimen/margin2"
                android:layout_height="56dp"
                android:fontFamily="@font/robotoregular"
                android:shadowColor="@color/color_gray">

                <!--this is the actual edit text which takes the input-->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text26"
                    android:fontFamily="@font/robotoregular"
                    android:layout_width="match_parent"
                    android:background="@drawable/text_background"
                    android:shadowColor="@color/card_line"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/r"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="All Profiles" />

            <CheckBox
                android:id="@+id/vl"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="With photos" />


        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text27"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin56"
            android:layout_marginTop="10dp"
            android:hint="Diet">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/text28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_background"
                android:clickable="true"
                android:fontFamily="@font/robotoregular"
                android:shadowColor="@color/color_gray"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin45"
            android:layout_marginBottom="@dimen/margin45"
            android:background="@drawable/bkg_button_gradient"
            android:shadowColor="#000000"
            android:text="Search"
            android:layout_marginTop="@dimen/margin10"
            android:textColor="#FFFFFF"
            app:cornerRadius="20dp"/>

    </LinearLayout>

</ScrollView>
</LinearLayout>