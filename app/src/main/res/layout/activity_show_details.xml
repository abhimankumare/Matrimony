<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_view"
        app:elevation="@dimen/margin4"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:titleTextColor="@color/white"/>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        tools:ignore="MissingClass,MissingConstraints">


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabGravity="fill"/>
    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin10"
        android:background="@drawable/text_background_ora">

        <ImageView
            android:id="@+id/iv_profilepic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin150"
            android:layout_marginStart="@dimen/margin5"
            android:layout_marginLeft="@dimen/margin5"
            android:layout_marginTop="@dimen/margin5"
            android:layout_marginEnd="@dimen/margin5"
            android:layout_marginRight="@dimen/margin5"
            android:layout_marginBottom="@dimen/margin5"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:padding="@dimen/margin5"
            app:srcCompat="@drawable/sxcx" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin185"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:padding="@dimen/margin5"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/verifiedicon"
                    tools:ignore="VectorDrawableCompat" />


                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/robotoregular"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/margin10"
                android:weightSum="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_heightyear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.50"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/margin5"
                    android:text="25 yrs. 5'3'"
                    android:fontFamily="@font/robotoregular"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/tv_citystate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.50"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/margin5"
                    android:fontFamily="@font/robotoregular"
                    android:text="Pune, Maharashtra"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/margin10"
                android:weightSum="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_casteset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/margin5"
                    android:layout_weight="0.50"
                    android:text="Hindu Maratha"
                    android:fontFamily="@font/robotoregular"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/tv_langua"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.50"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/margin5"
                    android:fontFamily="@font/robotoregular"
                    android:text="Marathi"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/margin10"
                android:weightSum="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_income"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/margin5"
                    android:layout_weight="0.50"
                    android:text="No Income"
                    android:fontFamily="@font/robotoregular"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/tv_marr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.50"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/margin5"
                    android:fontFamily="@font/robotoregular"
                    android:text="Never Married"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"/>


            </LinearLayout>


        </LinearLayout>





    </RelativeLayout>


    <ProgressBar
        android:id="@+id/pr_bar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ProgressBar>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"  />
</LinearLayout>