<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#F7F7F7"
    android:orientation="vertical"
    android:id="@+id/ll_register_root_view"
    tools:context=".activity.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_view"
                app:elevation="@dimen/margin4"
                app:titleTextAppearance="@style/Toolbar.TitleText"
                app:titleTextColor="@color/white"/>

            <!--//Details-->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin15"
                android:visibility="visible"
                android:padding="@dimen/margin5">

            </androidx.recyclerview.widget.RecyclerView>

            <!--//Details-->

<!--//Personal Details-->
            <LinearLayout
                android:id="@+id/ll_personal_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin20"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fullName"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin56"
                    android:hint="@string/enter_your_full_name">

                    <!--this is the actual edit text which takes the input-->
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_login"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLength="100"
                        android:padding="@dimen/margin2"
                        android:background="@drawable/text_background"
                        android:fontFamily="@font/robotoregular"
                        android:shadowColor="@color/color_gray" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/gender"
                    android:textColor="#FF8025"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/fullName" />

                    <RadioGroup
                        android:id="@+id/radioGroup1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                    <RadioButton
                        android:id="@+id/maleButton"
                        android:layout_width="wrap_content"
                        android:layout_weight="0.5"
                        android:checked="true"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotoregular"
                        android:text="@string/male"
                        app:buttonTint="@color/card_line"
                        android:textSize="@dimen/margin15" />

                    <RadioButton
                        android:id="@+id/femaleButton"
                        android:layout_width="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotoregular"
                        android:text="@string/female"
                        app:buttonTint="@color/card_line"
                        android:textSize="@dimen/margin15" />

                    </RadioGroup>

<!--                    <com.google.android.material.radiobutton.MaterialRadioButton-->
<!--                        android:id="@+id/radioMale"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="@string/male"-->
<!--                        android:textSize="18sp">-->

<!--                    </com.google.android.material.radiobutton.MaterialRadioButton>-->

<!--                    <com.google.android.material.radiobutton.MaterialRadioButton-->
<!--                        android:id="@+id/radioFemale"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginLeft="15dp"-->
<!--                        android:text="@string/female"-->
<!--                        android:textSize="18sp">-->

<!--                    </com.google.android.material.radiobutton.MaterialRadioButton>-->
<!--                -->

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/DOB"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin56"
                    android:hint="@string/enter_your_date_of_birth">

                    <!--this is the actual edit text which takes the input-->
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_DOB"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                       android:focusable="false"
                        android:padding="@dimen/margin2"
                        android:background="@drawable/text_background"
                        android:fontFamily="@font/robotoregular"
                        android:shadowColor="@color/color_gray"
                        android:visibility="visible" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/customerDaySpinnerLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin56"
                    android:layout_marginTop="10dp"
                    android:hint="@string/select_your_day">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/DayTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/margin2"
                        android:background="@drawable/text_background"
                        android:clickable="true"
                        android:fontFamily="@font/robotoregular"
                        android:shadowColor="@color/color_gray"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/DOB_Time"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin56"
                    android:layout_marginTop="10dp"
                    android:hint="@string/enter_your_birth_time">

                    <!--this is the actual edit text which takes the input-->
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_DOB_Time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/margin2"
                        android:focusable="false"
                        android:background="@drawable/text_background"
                        android:fontFamily="@font/robotoregular"
                        android:shadowColor="@color/color_gray"
                        android:visibility="visible" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/birthPlace"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin56"
                    android:layout_marginTop="10dp"
                    android:hint="@string/enter_your_birth_place">

                    <!--this is the actual edit text which takes the input-->
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_birth_place"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLength="100"
                        android:padding="@dimen/margin2"
                        android:background="@drawable/text_background"
                        android:fontFamily="@font/robotoregular"
                        android:shadowColor="@color/color_gray" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/customerVloodGroupSpinnerLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin56"
                    android:layout_marginTop="10dp"
                    android:hint="@string/select_your_blood_group">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/BloodGroupTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/margin2"
                        android:background="@drawable/text_background"
                        android:clickable="true"
                        android:fontFamily="@font/robotoregular"
                        android:shadowColor="@color/color_gray"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/familydietry"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin56"
                    android:layout_marginTop="10dp"
                    android:hint="@string/enter_your_family_diety">

                    <!--this is the actual edit text which takes the input-->
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_family_diety"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLength="100"
                        android:padding="@dimen/margin2"
                        android:background="@drawable/text_background"
                        android:fontFamily="@font/robotoregular"
                        android:shadowColor="@color/color_gray" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/SelectSectorSpinnerLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin56"
                    android:layout_marginTop="10dp"
                    android:hint="@string/select_your_height">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/customerHeightTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/margin2"
                        android:background="@drawable/text_background"
                        android:clickable="true"
                        android:fontFamily="@font/robotoregular"
                        android:shadowColor="@color/color_gray"
                          />
                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/customerCountrySpinnerLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin56"
                    android:layout_marginTop="10dp"
                    android:hint="@string/select_your_country">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/customerCountryTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/margin2"
                        android:background="@drawable/text_background"
                        android:clickable="true"
                        android:fontFamily="@font/robotoregular"
                        android:shadowColor="@color/color_gray"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/customerStateSpinnerLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin56"
                    android:layout_marginTop="10dp"
                    android:hint="@string/select_your_state">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/customerStateTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/margin2"
                        android:background="@drawable/text_background"
                        android:clickable="true"
                        android:fontFamily="@font/robotoregular"
                        android:shadowColor="@color/color_gray"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/customerCitySpinnerLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin56"
                    android:layout_marginTop="10dp"
                    android:hint="@string/select_your_city">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/customerCityTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/margin2"
                        android:background="@drawable/text_background"
                        android:clickable="true"
                        android:fontFamily="@font/robotoregular"
                        android:shadowColor="@color/color_gray"/>
                </com.google.android.material.textfield.TextInputLayout>

                <ProgressBar
                    android:id="@+id/pr_bar"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ProgressBar>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ti_email"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin56"
                    android:layout_marginTop="10dp"
                    android:hint="@string/pd_email_id">

                    <!--this is the actual edit text which takes the input-->
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/margin2"
                        android:background="@drawable/text_background"
                        android:fontFamily="@font/robotoregular"
                        android:shadowColor="@color/color_gray" />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/PIfullname"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin56"
                    android:layout_marginTop="10dp"
                    android:hint="@string/email_id_phone_number">

                    <!--this is the actual edit text which takes the input-->
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_mobileemail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/margin2"
                        android:maxLength="10"
                        android:inputType="number"
                        android:digits="0123456789"
                        android:background="@drawable/text_background"
                        android:fontFamily="@font/robotoregular"
                        android:shadowColor="@color/color_gray" />

                </com.google.android.material.textfield.TextInputLayout>

<!--                <com.google.android.material.textfield.TextInputLayout-->
<!--                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="@dimen/margin56"-->
<!--                    android:layout_marginTop="10dp"-->
<!--                    android:hint="@string/enter_password"-->
<!--                    app:endIconMode="password_toggle"-->
<!--                    app:endIconTint="@color/grey">-->

<!--                    <com.google.android.material.textfield.TextInputEditText-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:background="@drawable/text_background"-->
<!--                        android:fontFamily="@font/robotoregular"-->
<!--                        android:shadowColor="@color/color_gray" />-->

<!--                </com.google.android.material.textfield.TextInputLayout>-->


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etPasswordLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin56"
                    android:layout_marginTop="10dp"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/margin2"
                        android:background="@drawable/text_background"
                        android:fontFamily="@font/robotoregular"
                        android:hint="@string/enter_password"
                        android:inputType="textPassword"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin150"
                    android:hint="@string/relativeinfo"
                    app:counterMaxLength="4">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/info_about"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/text_background"
                        android:fontFamily="@font/robotoregular"
                        android:padding="@dimen/margin2"
                        android:shadowColor="@color/color_gray"
                        app:counterMaxLength="4" />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:id="@+id/IMFname"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="@string/indicates_mandatory_fields"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin45"
                    android:layout_marginBottom="@dimen/margin15"
                    android:background="@drawable/bkg_button_gradient"
                    android:shadowColor="#000000"
                    android:text="@string/save"
                    android:layout_marginTop="@dimen/margin10"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="20dp"/>

            </LinearLayout>

<!--            //Personal Details-->



        </LinearLayout>
    </ScrollView>
</LinearLayout>
